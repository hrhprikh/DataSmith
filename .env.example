# Environment configuration for DataSmith AI
# Copy this to .env and configure your values

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# LM Studio configuration (optional - for AI enhancement)
LM_STUDIO_URL=http://localhost:1234
LM_STUDIO_TIMEOUT=30
LM_STUDIO_ENABLED=false

# Processing configuration
MAX_FILE_SIZE=50000000  # 50MB in bytes
PROCESSING_TIMEOUT=300  # 5 minutes
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Data directories
DATA_RAW_DIR=./data/raw
DATA_CLEANED_DIR=./data/cleaned
DATA_PROCESSED_DIR=./data/processed
DATA_LABELED_DIR=./data/labeled

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5000", "https://*.onrender.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30